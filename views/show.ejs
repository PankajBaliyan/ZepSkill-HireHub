<%- include('./partials/header.ejs') %>
    <h1>Show Page for  <%= job.name %></h1>
    <div> <%=job.address%> </div>
    <div class="row">
        <div class="col-2">
            <img class="img-fluid" src="https://play-lh.googleusercontent.com/6UgEjh8Xuts4nwdWzTnWH8QtLuHqRMUB7dp24JYVE2xcYzq4HA8hFfcAbU-R-PC_9uA1" alt="">
        </div>
    </div>

    <div> <%= job.type %> </div>
    <div> <%= job.deadline %> </div>
    <div> <%= job.package %> </div>
    <div> <%= job.cgpa %> </div>
    <a href="/jobs/<%= job._id %>/apply" class="btn btn-info">Apply for this vacancy</a>

    <% if (currentUser && currentUser.isAdmin) { %>
        <a class="btn btn-warning" href="/jobs/<%= job._id %>/edit">Edit</a>
        <form action="/jobs/<%= job._id%>?_method=DELETE" method="post">
            <input class="btn btn-danger" type="submit" value="delete">
        </form>
    <% } %>

    <% if (currentUser && currentUser.isAdmin) { %>
    <h1>List of Students that have applied</h1>
    <% for( let student of job.appliedUsers){ %>
        
        <div><%=  student.username %></div>
        
        <% } %>
    <% } %>


<%- include('./partials/footer.ejs') %>
<%- include('./partials/header.ejs') %>
<a href="/notifications/new" class="btn btn-danger">Add a new Notif</a>
<% for( let notif of allNotif ) { %>
    <div>
        body : <%=notif.body.slice(0, 5)%>..., <%= notif.author%>
        <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="left" 
         title= "<%= notif.body  %>" >Read More</button>
        <form action="/notifications/<%= notif._id%>?_method=DELETE" method="post">
            <input type="submit" value="delete">
        </form>
    </div>
<% } %>
<%- include('./partials/footer.ejs') %>
<%- include('./partials/header.ejs') %>
    <div class="row">
        <div class="col-6 m-auto">
            <h1>Form to add New Job</h1>
            <form action="/jobs" method = "post">
                <div class="mb-3">
                <label for="name" class="form-label">Enter Job name</label>
                <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                <label for="address" class="form-label">Enter Job Location</label>
                <input type="text" class="form-control" id="address" name="address">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Enter company Logo</label>
                    <input type="text" class="form-control" id="image" name="image">
                </div>

                <div class="mb-3">
                    <label for="package" class="form-label">Job Stipen</label>
                    <input type="number" class="form-control" id="package" name="package">
                </div>

                <div class="mb-3">
                    <label for="cgpa" class="form-label">CGPA</label>
                    <input type="number" class="form-control" id="cgpa" name="cgpa" min="0" max="10" step="0.01">
                </div>

                <div class="mb-3">
                    <label for="deadline" class="form-label">Job deadline</label>
                    <input type="date" class="form-control" id="deadline" name="deadline">
                </div>

                <div class="mb-3">
                    <label for="type" class="form-label">Job Type</label>
                    <input type="text" class="form-control" id="type" name="type">
                </div>

                <div>
                    <input class="btn btn-primary" type="submit" class="submit">
                </div>
            </form>
        </div>
    </div>
<%- include('./partials/footer.ejs') %>